<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arifulislamanik.attendanceprobuild2.home"
    android:background="@drawable/home_back"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_home_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="HOME"
        android:width="200dp"
        android:height="60dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAKE ATTENDANCE"
        android:id="@+id/button_attendance"
        android:height="100dp"
        android:gravity="center"
        android:width="170dp"
        android:textSize="25sp"
        android:layout_marginTop="65dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_home_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW REPORT"
        android:id="@+id/button_report"
        android:textSize="25sp"
        android:width="160dp"
        android:gravity="center"
        android:height="100dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_attendance"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCHEDULE ALARM"
        android:id="@+id/button_export"
        android:textSize="25sp"
        android:width="160dp"
        android:gravity="center"
        android:height="100dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/button_report"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector" />
</RelativeLayout>
