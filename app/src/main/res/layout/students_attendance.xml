<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arifulislamanik.attendanceprobuild2.take_attendance"
    android:background="#ffe7e9ff">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView_student"
        android:choiceMode="multipleChoice"
        android:dividerHeight="5sp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/submitButton"
        android:divider="#DAEAFF"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/dateSelect"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance Form"
        android:id="@+id/textView11"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:background="@drawable/selector"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:id="@+id/dateSelect"
        android:background="@drawable/selector_comm"
        android:textColor="#ffffffff"
        android:textSize="18sp"

        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
